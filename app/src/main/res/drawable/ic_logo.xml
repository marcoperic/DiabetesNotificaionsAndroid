<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- Main circular background -->
    <path
        android:pathData="M100,100m-70,0a70,70 0,1 1,140 0a70,70 0,1 1,-140 0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startColor="#2196F3"
                android:centerColor="#1976D2"
                android:endColor="#0D47A1"
                android:type="radial"
                android:gradientRadius="70"
                android:centerX="100"
                android:centerY="100" />
        </aapt:attr>
    </path>

    <!-- Robot head -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="
            M 70,75
            L 130,75
            Q 135,75 135,80
            L 135,120
            Q 135,130 125,130
            L 75,130
            Q 65,130 65,120
            L 65,80
            Q 65,75 70,75
            Z" />

    <!-- Robot eyes -->
    <path
        android:fillColor="#0D47A1"
        android:pathData="
            M 85,95
            A 8,8 0 1,1 85,111
            A 8,8 0 1,1 85,95
            M 115,95
            A 8,8 0 1,1 115,111
            A 8,8 0 1,1 115,95" />

    <!-- Robot antenna -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="
            M 95,75
            L 100,60
            L 105,75
            Z" />
</vector> 